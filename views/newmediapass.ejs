<%- layout("/layout/boilerplates.ejs") %>

<style>
  /* ===== BASE STYLES ===== */
  :root {
    --primary: #4f46e5;
    --primary-light: #6366f1;
    --success: #10b981;
    --success-hover: #059669;
    --error: #ef4444;
    --text: #1f2937;
    --text-light: #6b7280;
    --border: #e5e7eb;
    --border-focus: #a5b4fc;
    --bg: #f9fafb;
    --card-bg: #ffffff;
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background-color: var(--bg);
    color: var(--text);
    line-height: 1.5;
    padding: 0;
    margin: 0;
  }

  /* ===== FORM CONTAINER ===== */
  .form-wrapper {
    max-width: 500px;
    margin: 4rem auto;
    padding: 2rem;
    background: var(--card-bg);
    border-radius: 12px;
    box-shadow: var(--shadow);
  }

  /* ===== FORM ELEMENTS ===== */
  .form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text);
    font-size: 0.95rem;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    margin-bottom: 1.25rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.2s ease;
    background-color: var(--bg);
  }

  .form-control:focus {
    outline: none;
    border-color: var(--primary-light);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
  }

  .form-control::placeholder {
    color: var(--text-light);
    opacity: 0.6;
  }

  /* ===== VALIDATION STATES ===== */
  .form-control:invalid {
    border-color: var(--border);
  }

  .form-control:invalid:focus {
    border-color: var(--error);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
  }

  .invalid-feedback {
    display: none;
    color: var(--error);
    font-size: 0.85rem;
    margin-top: -1rem;
    margin-bottom: 1rem;
  }

  .was-validated .form-control:invalid ~ .invalid-feedback,
  .form-control.is-invalid ~ .invalid-feedback {
    display: block;
  }

  /* ===== SUBMIT BUTTON ===== */
  .btn {
    display: inline-block;
    padding: 0.75rem 1.75rem;
    font-weight: 500;
    text-align: center;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    font-size: 1rem;
    width: 100%;
  }

  .btn-success {
    background-color: var(--success);
    color: white;
  }

  .btn-success:hover {
    background-color: var(--success-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 640px) {
    .form-wrapper {
      margin: 2rem auto;
      padding: 1.5rem;
      border-radius: 8px;
    }
    
    .form-control {
      padding: 0.65rem 0.9rem;
    }
  }

  /* ===== ANIMATIONS ===== */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .form-wrapper {
    animation: fadeInUp 0.4s ease-out forwards;
  }
</style>

<div class="form-wrapper">
  <form action="/mediapassword" method="post" class="needs-validation" novalidate>
    <div class="form-group">
      <label for="medianame" class="form-label">Media Name</label>
      <input type="text" class="form-control" name="medianame" placeholder="Enter your media name" id="medianame" required>
      <div class="invalid-feedback">
        Please provide a valid media name.
      </div>
    </div>
    
    <div class="form-group">
      <label for="password" class="form-label">Password</label>
      <input type="text" class="form-control" name="password" placeholder="Enter your password" required>
      <div class="invalid-feedback">
        Please provide a valid password.
      </div>
    </div>
    
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>